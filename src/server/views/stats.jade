doctype html
html(lang='en', ng-app='myApp')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(href="/css/bootstrap.min.css", rel="stylesheet")
        link(href="/css/stylish-portfolio.css", rel="stylesheet")
        link(href="/font-awesome/css/font-awesome.min.css", rel="stylesheet", type="text/css")
        link(href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic", rel="stylesheet", type="text/css")

        title poll.iwog
    body(ng-controller='pollsCtrl')
      .header.header(id="top")
        .text-vertical-center
          h2 where polls are born
          h1 poll.iwog
          .switch(ng-switch='poll_count')
            .switch(ng-switch-when=1)
              h3 {{poll_count}} poll has been created in total
            .ng-switch-default
              h3 {{poll_count}} polls have been created in total

          .switch(ng-switch='active_count')
            .switch(ng-switch-when=1)
              h3 {{active_count}} poll is still open
            .ng-switch-default
              h3 {{active_count}} polls are still open

          h3 1 Paul has worked on this project

      script(src='/bower_components/angular/angular.js')
      script(src='/js/main.js')
      script(src='/js/jquery.js')
      script(src='/js/bootstrap.min.js')

